{
    "name": "awssignaturev4",
    "version": "1.0.0",
    "author": "TIBCO Software Inc.",
    "type": "flogo:activity",
    "title": "AWS Signature V4 Generator",
    "description": "Generates AWS Signature Version 4 authentication headers for REST API calls",
    "ref": "github.com/mpandav-tibco/flogo-extensions/activity/awssignaturev4",
    "inputs": [
        {
            "name": "accessKeyId",
            "type": "string",
            "required": true
        },
        {
            "name": "secretAccessKey",
            "type": "string",
            "required": true
        },
        {
            "name": "region",
            "type": "string",
            "required": true
        },
        {
            "name": "service",
            "type": "string",
            "required": true
        },
        {
            "name": "sessionToken",
            "type": "string",
            "required": true
        },
        {
            "name": "httpMethod",
            "type": "string",
            "required": true
        },
        {
            "name": "url",
            "type": "string",
            "required": true
        },
        {
            "name": "payload",
            "type": "string",
            "required": false
        },
        {
            "name": "headers",
            "type": "object",
            "required": false
        },
        {
            "name": "timestamp",
            "type": "string",
            "required": false
        }
    ],
    "outputs": [
        {
            "name": "success",
            "type": "boolean",
            "description": "Indicates whether signature generation was successful"
        },
        {
            "name": "authorizationHeader",
            "type": "string",
            "description": "Complete AWS Authorization header value"
        },
        {
            "name": "xAmzDate",
            "type": "string",
            "description": "AWS X-Amz-Date header value"
        },
        {
            "name": "xAmzContentSha256",
            "type": "string",
            "description": "AWS X-Amz-Content-Sha256 header value"
        },
        {
            "name": "xAmzSecurityToken",
            "type": "string",
            "description": "AWS X-Amz-Security-Token header value (when using session token)"
        },
        {
            "name": "allHeaders",
            "type": "object",
            "description": "Complete set of headers needed for AWS request"
        },
        {
            "name": "canonicalRequest",
            "type": "string",
            "description": "AWS canonical request string (for debugging)"
        },
        {
            "name": "stringToSign",
            "type": "string",
            "description": "AWS string-to-sign (for debugging)"
        },
        {
            "name": "errorCode",
            "type": "string",
            "description": "Error code for failed operations"
        },
        {
            "name": "errorMessage",
            "type": "string",
            "description": "Error message for failed operations"
        },
        {
            "name": "errorDetails",
            "type": "object",
            "description": "Additional error context and suggestions"
        }
    ]
}