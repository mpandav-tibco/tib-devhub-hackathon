{
  "name": "jsonschematransform",
  "title": "JSON Schema Transformer",
  "version": "1.0.0",
  "type": "flogo:activity",
  "description": "Transforms JSON Schema to XSD, Avro, and other formats. Supports conversion to XSD, Avro, or both formats simultaneously with comprehensive feature support.",
  "ref": "github.com/milindpandav/activity/jsonschematransform",
  "settings": [
    {
      "name": "outputFormat",
      "type": "string",
      "required": false,
      "display": {
        "name": "Output Format",
        "description": "Specify the output format: 'xsd' for XSD only, 'avro' for Avro only, or 'both' for both formats.",
        "appPropertySupport": true
      },
      "value": "both",
      "allowed": [
        "xsd",
        "avro",
        "both"
      ]
    }
  ],
  "inputs": [
    {
      "name": "jsonSchemaString",
      "type": "string",
      "required": true
    },
    {
      "name": "outputFormat",
      "type": "string",
      "required": false
    },
    {
      "name": "rootElementName",
      "type": "string",
      "required": false,
      "value": "RootElement"
    },
    {
      "name": "targetNamespace",
      "type": "string",
      "required": false,
      "value": ""
    },
    {
      "name": "avroRecordName",
      "type": "string",
      "required": false,
      "value": "RootRecord"
    },
    {
      "name": "avroNamespace",
      "type": "string",
      "required": false,
      "value": "com.example"
    }
  ],
  "outputs": [
    {
      "name": "xsdString",
      "type": "string"
    },
    {
      "name": "avroSchema",
      "type": "string"
    },
    {
      "name": "error",
      "type": "boolean"
    },
    {
      "name": "errorMessage",
      "type": "string"
    }
  ]
}