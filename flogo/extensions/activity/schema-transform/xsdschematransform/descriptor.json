{
  "name": "xsdschematransform",
  "type": "flogo:activity",
  "version": "1.0.0",
  "title": "XSD Schema Transform",
  "description": "Comprehensive XSD Schema transformation activity supporting conversion to JSON Schema and Avro Schema with extensive feature coverage",
  "author": "Flogo Custom Extensions",
  "homepage": "https://github.com/project-flogo/contrib/tree/master/activity/xsdschematransform",
  "settings": [],
  "inputs": [
    {
      "name": "xsdString",
      "type": "string",
      "required": true,
      "description": "XSD schema string to transform"
    },
    {
      "name": "outputFormat",
      "type": "string",
      "description": "Output format: 'jsonschema', 'avro', or 'both'",
      "value": "both"
    },
    {
      "name": "validateInput",
      "type": "boolean",
      "description": "Validate XSD schema before conversion",
      "value": false
    },
    {
      "name": "preserveOrder",
      "type": "boolean",
      "description": "Preserve element order when possible",
      "value": false
    },
    {
      "name": "optimizeOutput",
      "type": "boolean",
      "description": "Optimize output schema structure",
      "value": false
    },
    {
      "name": "jsonSchemaVersion",
      "type": "string",
      "description": "JSON Schema version: 'draft-04', 'draft-07', '2019-09', '2020-12'",
      "value": "2020-12"
    },
    {
      "name": "jsonSchemaTitle",
      "type": "string",
      "description": "JSON Schema title"
    },
    {
      "name": "jsonSchemaId",
      "type": "string",
      "description": "JSON Schema $id"
    },
    {
      "name": "addExamples",
      "type": "boolean",
      "description": "Add example values from XSD",
      "value": false
    },
    {
      "name": "avroRecordName",
      "type": "string",
      "description": "Root record name for Avro schema",
      "value": "RootRecord"
    },
    {
      "name": "avroNamespace",
      "type": "string",
      "description": "Namespace for Avro schema",
      "value": "com.example"
    },
    {
      "name": "avroLogicalTypes",
      "type": "boolean",
      "description": "Enable Avro logical types (date, time, decimal, etc.)",
      "value": false
    },
    {
      "name": "avroUnionMode",
      "type": "string",
      "description": "Avro union handling: 'nullable', 'strict', 'permissive'",
      "value": "nullable"
    },
    {
      "name": "handleAny",
      "type": "string",
      "description": "How to handle xs:any elements: 'object', 'string', 'ignore'",
      "value": "object"
    },
    {
      "name": "handleChoice",
      "type": "string",
      "description": "How to handle xs:choice: 'union', 'oneof', 'anyof'",
      "value": "union"
    },
    {
      "name": "includeAttributes",
      "type": "boolean",
      "description": "Include XML attributes in conversion",
      "value": true
    },
    {
      "name": "namespaceHandling",
      "type": "string",
      "description": "Namespace handling: 'ignore', 'prefix', 'separate'",
      "value": "ignore"
    },
    {
      "name": "complexTypeMode",
      "type": "string",
      "description": "Complex type handling: 'inline', 'definitions', 'refs'",
      "value": "inline"
    }
  ],
  "outputs": [
    {
      "name": "jsonSchemaString",
      "type": "string",
      "description": "Generated JSON Schema string"
    },
    {
      "name": "avroSchemaString",
      "type": "string",
      "description": "Generated Avro Schema string"
    },
    {
      "name": "validationResult",
      "type": "string",
      "description": "XSD validation result (JSON string)"
    },
    {
      "name": "conversionStats",
      "type": "string",
      "description": "Conversion statistics (JSON string)"
    },
    {
      "name": "error",
      "type": "boolean",
      "description": "Whether an error occurred during conversion"
    },
    {
      "name": "errorMessage",
      "type": "string",
      "description": "Error message if error occurred"
    }
  ]
}