{
  "name": "avroschematransform",
  "title": "Avro Schema Transformer",
  "version": "1.0.0",
  "type": "flogo:activity",
  "description": "Transforms Avro schema to JSON Schema and/or XSD format. Supports conversion to JSON Schema, XSD, or both formats simultaneously.",
  "ref": "github.com/milindpandav/activity/avroschematransform",
  "settings": [
    {
      "name": "outputFormat",
      "type": "string",
      "required": false,
      "display": {
        "name": "Output Format",
        "description": "Specify the output format: 'json' for JSON Schema only, 'xsd' for XSD only, or 'both' for both formats.",
        "appPropertySupport": true
      },
      "value": "both",
      "allowed": [
        "json",
        "xsd",
        "both"
      ]
    }
  ],
  "inputs": [
    {
      "name": "avroSchemaString",
      "type": "string",
      "required": true
    },
    {
      "name": "outputFormat",
      "type": "string",
      "required": false
    },
    {
      "name": "rootElementName",
      "type": "string",
      "required": false,
      "value": "root"
    },
    {
      "name": "targetNamespace",
      "type": "string",
      "required": false,
      "value": ""
    }
  ],
  "outputs": [
    {
      "name": "jsonSchema",
      "type": "string"
    },
    {
      "name": "xsdString",
      "type": "string"
    },
    {
      "name": "error",
      "type": "boolean"
    },
    {
      "name": "errorMessage",
      "type": "string"
    }
  ]
}